<?xml version="1.0" encoding="utf-8"?>

<!-- A row in the items list: -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_row_height"
    android:paddingStart="@dimen/item_row_padding_start"
    android:paddingEnd="@dimen/item_row_padding_end">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_text_title"
            style="@style/ItemTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/msg_not_found"
            android:textSize="@dimen/item_row_title_size"
            android:alpha="0.7"
            android:ellipsize="end" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_text_current_price"
                style="@style/ItemTheme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="@string/msg_not_found"
                android:textSize="@dimen/item_row_current_price_size"
                android:textStyle="bold"
                android:alpha="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/item_text_price_variation"
                style="@style/ItemTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text=""
                android:textSize="@dimen/item_row_price_variation_size"
                android:textStyle="bold"
                android:alpha="1" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>